@model GizmoGuide.Models.Review

@{
    ViewBag.Title = Model.ProductName;
}

@*I eliminated the EF table layout for the review and instead placed all of the manufactuer's information on the left hand side (or top on smaller views) of the page and put the review conent in another column using bootstrap rows and columns.*@ 

<div class="row">
    <div class="col-md-4">
        <div class="gear-background">
            <div class="transparent-blue">
                    <img class="product-image" src="@Model.ImageURL" />
           
                <div class="product-info-holder">
                    <h2 class="product-name"> @Model.ProductName</h2>
                    <p class="review-label">@Html.DisplayNameFor(model=> model.ProductMake)</p>
                    <p class="review-info">@Model.ProductMake</p>
                    <p class="review-label">@Html.DisplayNameFor(model=> model.ModelNumber)</p>
                    <p class="review-info">@Model.ModelNumber</p>
                    <p class="product-description">@Model.ProductDescription</p>
                </div>
            </div>
        </div>   
     </div>
    
    <div class="col-md-8">
        <h2 class="orange">The Gear Guy Review</h2>
        <p>@Model.ReviewDate</p>
        <p class="review-label orange">@Html.DisplayNameFor(model=> model.Score)</p>
        
       @*This piece of C# code determines how many orange spinning gears and how many blue static gears to display based on the score.*@
        
         @if (Model.Score == 1)
        { <div class="scoreholder">
            <i class="fa fa-cog fa-spin"></i>
              <i class="fa fa-cog"></i>
              <i class="fa fa-cog"></i>
              <i class="fa fa-cog"></i>
              <i class="fa fa-cog"></i>
        </div>}

        @if (Model.Score == 2)
        { <div class="scoreholder">
            <i class="fa fa-cog fa-spin"></i>
              <i class="fa fa-cog fa-spin"></i>
              <i class="fa fa-cog"></i>
              <i class="fa fa-cog"></i>
              <i class="fa fa-cog"></i>
        </div>}

        @if (Model.Score == 3)
        { <div class="scoreholder">
            <i class="fa fa-cog fa-spin"></i>
            <i class="fa fa-cog fa-spin"></i>
              <i class="fa fa-cog fa-spin"></i>
              <i class="fa fa-cog"></i>
              <i class="fa fa-cog"></i>
              
        </div>}

        @if (Model.Score == 4)
        { <div class="scoreholder">
            <i class="fa fa-cog fa-spin"></i>
            <i class="fa fa-cog fa-spin"></i>
            <i class="fa fa-cog fa-spin"></i>
            <i class="fa fa-cog fa-spin"></i>
              <i class="fa fa-cog"></i>
        </div>}

        @if (Model.Score == 5)
        { <div class="scoreholder">
            <i class="fa fa-cog fa-spin"></i>
            <i class="fa fa-cog fa-spin"></i>
            <i class="fa fa-cog fa-spin"></i>
            <i class="fa fa-cog fa-spin"></i>
            <i class="fa fa-cog fa-spin"></i>
        </div>}

        <p class="review-text">@Model.ReviewContent</p>
   
        <div>
            <p class="orange">
                @Html.ActionLink("Edit", "Edit", new { id = Model.ReviewID }) |
                @Html.ActionLink("Back to List", "Index")
            </p>
        </div>
     </div>
</div>
